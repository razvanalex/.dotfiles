
# ====== Variables =============================

# Uncomment to enable experimental features
# export YABAI_CERT=yabai-cert

# ===== Tiling settings =======================

# Layout - bsp (binary space partitioning), stack or float
yabai -m config layout                      managed

# Window placement
yabai -m config window_placement            second_child

# Split ratios
yabai -m config split_ratio                 0.50
yabai -m config auto_balance                off

# Padding and gaps
yabai -m config top_padding                 0
yabai -m config bottom_padding              0
yabai -m config left_padding                0
yabai -m config right_padding               0
yabai -m config window_gap                  0

# ===== Mouse settings =========================

# Set mouse follows focus mode
yabai -m config mouse_follows_focus         on

# Set focus follows mouse mode
# Options: off, autoraise, autofocus
yabai -m config focus_follows_mouse         off

# Modifier for clicking and dragging with mouse
yabai -m config mouse_modifier               alt

# Set modifier + left-click drag to move window
yabai -m config mouse_action1                move

# Set modifier + right-click drag to resize window
yabai -m config mouse_action2                resize

# When window is dropped in center of another window, swap them
yabai -m config mouse_drop_action           swap

# ===== Window modifications ===================

# Window opacity (default: off)
yabai -m config window_opacity              off
yabai -m config window_opacity_duration     0.0
yabai -m config active_window_opacity       1.0
yabai -m config normal_window_opacity       1.0

# Window shadows (default: on)
yabai -m config window_shadow               on

# Window border
# yabai -m config window_border               on
# yabai -m config window_border_width         4
# yabai -m config active_window_border_color  "0xFF40FF00"
# yabai -m config normal_window_border_color  "0x00FFFFFF"
# yabai -m config insert_feedback_color       "0xffd75f5f"

# ===== Window rules ===========================

# Exclude problematic apps from being managed:
yabai -m rule --add can-resize=false manage=off

yabai -m rule --add app="System Preferences" manage=off
yabai -m rule --add app="System Settings" manage=off
yabai -m rule --add app="Archive Utility" manage=off
yabai -m rule --add app="Calculator" manage=off
yabai -m rule --add app="Dictionary" manage=off
yabai -m rule --add app="Digital Color Meter" manage=off
yabai -m rule --add app="Disk Utility" manage=off
yabai -m rule --add app="Font Book" manage=off
yabai -m rule --add app="Activity Monitor" manage=off
yabai -m rule --add app="App Store" manage=off
yabai -m rule --add app="Notes" manage=off
yabai -m rule --add app="^Finder$" title="* Folder" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^Time Machine$" manage=off
yabai -m rule --add app="^Installer$" manage=off
yabai -m rule --add app="^QuickTime Player$" manage=off
yabai -m rule --add app="^Preview$" manage=off

yabai -m rule --add title="^Picture in Picture$" manage=off

# ===== Signals ================================

# Enable specific apps to float in a custom space
yabai -m signal --add event=application_activated app="^System Preferences$" action="yabai -m window --focus mouse"
# yabai -m signal --add event=application_activated app="^Finder$" action="yabai -m window --focus mouse"

